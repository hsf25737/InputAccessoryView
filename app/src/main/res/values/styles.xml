<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="search_panel_item">
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">35dp</item>
    </style>

    <style name="search_panel_text_view" parent="search_panel_item" >
        <item name="android:textAlignment">center</item>
        <item name="android:background">@drawable/input_accessory_panel_background</item>
    </style>

    <style name="input_accessory_bar_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingStart">5dp</item>
        <item name="android:paddingEnd">5dp</item>
        <item name="android:divider">@drawable/input_accessory_panel_divider</item>
        <item name="android:showDividers">middle</item>
        <item name="android:background">@color/gray_cc</item>
        <item name="android:orientation">horizontal</item>
    </style>

</resources>
